<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="720" prefWidth="1080" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.CreateGameMenu" >
   <children>
      <ChoiceBox fx:id="playersNumber" layoutX="318.0" layoutY="69.0" prefHeight="39.0" prefWidth="186.0" onKeyPressed="#setPlace"/>
      <Label layoutX="28.0" layoutY="69.0" prefHeight="39.0" prefWidth="200.0" text="Select Number of Players" />
      <TextField fx:id="username" layoutX="311.0" layoutY="170.0" prefHeight="39.0" prefWidth="200.0" promptText="Enter Player Username" />
      <Label layoutX="28.0" layoutY="171.0" prefHeight="47.0" prefWidth="216.0" text="Add Or Remove Player" />
      <Button layoutX="564.0" layoutY="175.0" mnemonicParsing="false" onMouseClicked="#addPlayer" prefHeight="30.0" prefWidth="60.0" text="Add" />
      <Button layoutX="662.0" layoutY="175.0" mnemonicParsing="false" onMouseClicked="#removePlayer" prefHeight="30.0" prefWidth="80" text="Remove" />
      <Label layoutX="55.0" layoutY="275.0" prefHeight="30.0" prefWidth="283.0" text=" Players :">
         <font>
            <Font size="31.0" />
         </font>
      </Label>
      <VBox fx:id="vbox" alignment="TOP_CENTER" layoutX="268.0" layoutY="330.0" prefHeight="290.0" prefWidth="422.0" />
      <Label fx:id="message" layoutX="806.0" layoutY="171.0" prefHeight="30.0" prefWidth="250" />
      <Button layoutX="789.0" layoutY="370.0" mnemonicParsing="false" onMouseClicked="#startGame" prefHeight="132.0" prefWidth="172.0" text="Start Game">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</Pane>
